<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".view.SigninActivity">

    <TextView
        android:id="@+id/signInTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sansita_swashed_bold"
        android:text="Way Ward"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <TextView
        android:id="@+id/signInDescription"
        android:layout_width="347dp"
        android:layout_height="61dp"
        android:fontFamily="@font/signika_negative"
        android:text="Navigate Your Adventures with Precision"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <ImageView
        android:id="@+id/signInLogo"
        android:layout_width="101dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="-26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="28dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:id="@+id/signInWB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_bold"
                android:text="Welcome Back, \nUser"
                android:textColor="#000000"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.499" />

            <TextView
                android:id="@+id/signInPasswordTitle"
                android:layout_width="128dp"
                android:layout_height="30dp"
                android:fontFamily="@font/signika_negative"
                android:text="Password"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginTop="80dp"/>

            <Button
                android:id="@+id/signInButton"
                android:layout_width="246dp"
                android:layout_height="65dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/signika_bold"
                android:text="Sign In"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageView
                android:id="@+id/signInAvatar"
                android:layout_width="69dp"
                android:layout_height="72dp"
                android:layout_marginLeft="270dp"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageView
                android:id="@+id/signInPasswordLogo"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:layout_marginTop="190dp"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <EditText
                android:id="@+id/signInPassword"
                android:layout_width="263dp"
                android:layout_height="60dp"
                android:layout_marginTop="190dp"
                android:ems="10"
                android:hint="................."
                android:inputType="textPassword"
                android:textSize="34sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
