<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".views.UserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/PrivacyBottomBarDarkCream"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:backgroundTint="#ACA193"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/PrivacyBottomBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/PrivacyHomeButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="Home Button"
                android:onClick="M_homeBtn"
                app:srcCompat="@mipmap/homeicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="match"></ImageButton>

            <ImageButton
                android:id="@+id/PrivacySearchButton"
                android:layout_width="70dp"
                android:layout_height="73dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Search Button"
                android:onClick="M_searchBtn"
                app:srcCompat="@mipmap/searchicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/PrivacyMainButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="Main Button"
                android:onClick="M_popUpBtn"
                app:srcCompat="@mipmap/mainbuttonicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/PrivacyEditButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:contentDescription="Edit Button"
                android:onClick="M_editPlanBtn"
                app:srcCompat="@mipmap/editicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/PrivacyUPButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Profile Button"
                android:onClick="profileSettingsBtn"
                app:srcCompat="@mipmap/profileicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/PrivacyBottomBarOrange"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent" >

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="427dp"
        android:layout_height="786dp"
        app:layout_constraintBottom_toTopOf="@+id/PrivacyBottomBarDarkCream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <WebView
            android:id="@+id/webView_privacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika"
            android:textColor="#000000"></WebView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>