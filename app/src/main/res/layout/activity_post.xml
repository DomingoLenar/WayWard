<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".view.PostActivity">

    <TextView
        android:id="@+id/postProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_bold"
        android:text="Make way for \nothers!"
        android:textColor="#853E34"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <TextView
        android:id="@+id/postDescription"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_light"
        android:text="Post your previous itineraries for other to rate or use for their future travels!"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <ScrollView
        android:id="@+id/postVerticalScrollView"
        android:layout_width="350dp"
        android:layout_height="440dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/postCardMainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/postCard1"
        android:layout_width="350dp"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/orange"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="50dp" >

        <LinearLayout
            android:id="@+id/postCardContentsHorizontal1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/postAvatar1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/avataricon" />

            <TextView
                android:id="@+id/postNameTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_bold"
                android:text="User"
                android:textColor="#853E34"
                android:textSize="34sp"
                android:layout_marginTop="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/postCardContentsVertical1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/postPicture1"
                android:layout_width="270dp"
                android:layout_height="180dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/avataricon" />

            <EditText
                android:id="@+id/postLocation1"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:ems="10"
                android:fontFamily="@font/signika"
                android:hint="Enter a location..."
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/postBackground1"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:contentDescription="Background"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/cream"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/postStarRating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="360dp"
            android:numStars="5"
            android:rating="5"
            android:stepSize="0.5"
            android:progressTint="#FFFF00"
            android:progressBackgroundTint="@android:color/transparent"
            android:secondaryProgressTint="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/postCard2"
                android:layout_width="350dp"
                android:layout_height="440dp"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/orange"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopPf="parent"
                app:cardCornerRadius="50dp" >

                <LinearLayout
                    android:id="@+id/postCardContentsHorizontal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/postAvatar2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/avataricon" />

                    <TextView
                        android:id="@+id/postNameTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/signika_bold"
                        android:text="User"
                        android:textColor="#853E34"
                        android:textSize="34sp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/postCardContentsVertical2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/postPicture2"
                        android:layout_width="270dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginStart="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/avataricon" />

                    <EditText
                        android:id="@+id/postLocation2"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_corner"
                        android:ems="10"
                        android:fontFamily="@font/signika"
                        android:hint="Enter a location..."
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/postBackground2"
                        android:layout_width="270dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="40dp"
                        android:contentDescription="Background"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="@color/cream"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <RatingBar
                    android:id="@+id/postStarRating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="360dp"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.5"
                    android:progressTint="#FFFF00"
                    android:progressBackgroundTint="@android:color/transparent"
                    android:secondaryProgressTint="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/postBottomBarDarkCream"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:backgroundTint="#ACA193"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/postBottomBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/postHomeButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="match"
                android:contentDescription="Home Button"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/homeicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/postSearchButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Search Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/searchicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/postMButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:contentDescription="Main Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/mainbuttonicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/postEditButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:contentDescription="Edit Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/editicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/postUserProfileButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Profile Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/profileicon" >
            </ImageButton>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/postBottomBarOrange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent" >

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>