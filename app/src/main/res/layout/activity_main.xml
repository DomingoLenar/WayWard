<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/mainExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_bold"
        android:text="EXPLORE"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/mainTopRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_bold"
        android:text="Top Rated"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <TextView
        android:id="@+id/mainRecommended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_bold"
        android:text="Recommended"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.463" />

    <ImageView
        android:id="@+id/signInAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:srcCompat="@mipmap/avataricon" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="600dp"
        android:backgroundTint="#CACACA"
        app:cardCornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mainSearchLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/searchicon" />

            <EditText
                android:id="@+id/mainSearchField"
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:fontFamily="@font/signika"
                android:hint="Search for a place..."
                android:inputType="textPersonName"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:backgroundTint="#ACA193"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mainHomeButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="match"
                android:contentDescription="Home Button"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/homeicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainSearchButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Search Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/searchicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainMButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:contentDescription="Main Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/mainbuttonicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainEditButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:contentDescription="Edit Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/editicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainUserProfileButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Profile Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/profileicon" >
            </ImageButton>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent" >

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>