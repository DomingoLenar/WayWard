<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".view.SignUpActivity">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sansita_swashed_bold"
        android:text="Way Ward"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <TextView
        android:id="@+id/signUpDescription"
        android:layout_width="347dp"
        android:layout_height="61dp"
        android:fontFamily="@font/signika_negative"
        android:text="Navigate Your Adventures with Precision"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <ImageView
        android:id="@+id/signUpLogo"
        android:layout_width="130dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@mipmap/logointerfaceicon" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="-26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="28dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:id="@+id/signUpNA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/signika_bold"
                android:text="New Account"
                android:textColor="#000000"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.499" />

            <TextView
                android:id="@+id/signUpEmailAddressTitle"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/signika_negative"
                android:text="Email Address"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/signUpUsernameTitle"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/signika_negative"
                android:text="Username"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/signUpPasswordTitle"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/signika_negative"
                android:text="Password"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="246dp"
                android:layout_height="65dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/signika_bold"
                android:text="Sign Up"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageButton
                android:id="@+id/signUpAvatar"
                android:layout_width="69dp"
                android:layout_height="72dp"
                android:layout_marginLeft="270dp"
                android:contentDescription="Add Photo"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/addphotoicon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageView
                android:id="@+id/signUpPasswordLogo"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:layout_marginTop="260dp"
                app:srcCompat="@mipmap/passwordicon" />

            <EditText
                android:id="@+id/signUpPassword"
                android:layout_width="263dp"
                android:layout_height="60dp"
                android:layout_marginTop="260dp"
                android:ems="10"
                android:hint="................."
                android:inputType="textPassword"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageView
                android:id="@+id/signUpEmailAddressLogo"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:layout_marginTop="80dp"
                app:srcCompat="@mipmap/emailaddressicon" />

            <EditText
                android:id="@+id/signUpEmailAddress"
                android:layout_width="263dp"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:ems="10"
                android:hint="................."
                android:inputType="textEmailAddress"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="28dp">

            <ImageView
                android:id="@+id/signUpUsernameLogo"
                android:layout_width="68dp"
                android:layout_height="61dp"
                android:layout_marginTop="170dp"
                app:srcCompat="@mipmap/usernameicon" />

            <EditText
                android:id="@+id/signUpUsername"
                android:layout_width="263dp"
                android:layout_height="60dp"
                android:layout_marginTop="170dp"
                android:ems="10"
                android:hint="................."
                android:inputType="textPersonName"
                android:textSize="34sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
