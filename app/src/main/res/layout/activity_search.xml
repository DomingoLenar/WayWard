<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".view.SearchActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="158dp"
        android:src="@drawable/brown_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/signika_bold"
        android:text="DISCOVER"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <ImageButton
        android:id="@+id/searchAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="640dp"
        android:background="@color/cream"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="searchAvatar"
        app:srcCompat="@mipmap/avataricon">
    </ImageButton>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchSearchBar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="#CACACA"
        app:cardCornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/searchSearchBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchSearchLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/searchicon" />

            <EditText
                android:id="@+id/searchSearchField"
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:fontFamily="@font/signika"
                android:hint="Search for a place..."
                android:inputType="textPersonName"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainBottomBarDarkCream"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:backgroundTint="#ACA193"
        app:layout_constraintBottom_toBottomOf="parent" >

        <LinearLayout
            android:id="@+id/mainBottomBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mainHomeButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="match"
                android:contentDescription="Home Button"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/homeicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainSearchButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Search Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/searchicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainMButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:contentDescription="Main Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/mainbuttonicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainEditButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:contentDescription="Edit Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/editicon" >
            </ImageButton>

            <ImageButton
                android:id="@+id/mainUserProfileButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="Profile Button"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/profileicon" >
            </ImageButton>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainBottomBarOrange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent" >

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/searchFragments"
        android:layout_width="413dp"
        android:layout_height="47dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:context=".view.SearchActivity"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="409dp"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/popularFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popular" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/recentFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab_layout" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>