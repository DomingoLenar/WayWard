<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".views.SearchActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="158dp"
        android:src="@drawable/brown_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchExplore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/signika_bold"
        android:text="DISCOVER"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/searchSearchBar"
        app:layout_constraintStart_toStartOf="@+id/searchSearchBar" />

    <ImageButton
        android:id="@+id/searchAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/cream"
        android:contentDescription="searchAvatar"
        app:layout_constraintEnd_toEndOf="@+id/searchSearchBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/avataricon"></ImageButton>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchSearchBar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="85dp"
        android:backgroundTint="#CACACA"
        app:cardCornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/searchSearchBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchSearchLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@mipmap/searchicon" />

            <EditText
                android:id="@+id/searchSearchField"
                android:layout_width="265dp"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:fontFamily="@font/signika"
                android:hint="Search for a place..."
                android:inputType="textPersonName"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainBottomBarDarkCream"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-26dp"
        android:backgroundTint="#ACA193"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/mainBottomBarContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mainHomeButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="Home Button"
                android:onClick="M_homeBtn"
                app:srcCompat="@mipmap/homeicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="match"></ImageButton>

            <ImageButton
                android:id="@+id/mainSearchButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Search Button"
                android:onClick="M_searchBtn"
                app:srcCompat="@mipmap/searchicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/mainMButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="Main Button"
                android:onClick="M_popUpBtn"
                app:srcCompat="@mipmap/mainbuttonicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/mainEditButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:contentDescription="Edit Button"
                android:onClick="M_editPlanBtn"
                app:srcCompat="@mipmap/editicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

            <ImageButton
                android:id="@+id/M_userSettingsBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:contentDescription="Profile Button"
                android:onClick="S_userSettingsBtn"
                app:srcCompat="@mipmap/profileicon"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="30dp"></ImageButton>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainBottomBarOrange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/orange"
            app:layout_constraintBottom_toBottomOf="parent">

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/S_popularTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/S_recentTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Description for ViewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>