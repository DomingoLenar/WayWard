<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9BAA4"
    tools:context=".views.LoginActivity">

    <Button
        android:id="@+id/signUp"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="42dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/signika_bold"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="42dp"
        android:backgroundTint="#E96925"
        android:fontFamily="@font/signika_bold"
        android:onClick="signIn"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="289dp"
        android:layout_height="55dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/signika_negative"
        android:text="Navigate Your Adventures with Precision"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/sansita_black_italic"
        android:text="Way Ward"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>