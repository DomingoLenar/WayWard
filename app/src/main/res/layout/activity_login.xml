<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9BAA4"
    tools:context=".views.LoginActivity">

    <Button
        android:id="@+id/signUp"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/button_white_bg"
        android:fontFamily="@font/signika_bold"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signIn" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="42dp"
        android:background="@drawable/rounded_orange"
        android:fontFamily="@font/signika_bold"
        android:onClick="signIn"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/L_mottoLabel" />

    <TextView
        android:id="@+id/L_mottoLabel"
        android:layout_width="289dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/signika_negative"
        android:text="Navigate Your Adventures with Precision"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/L_appName"
        app:layout_constraintStart_toStartOf="@+id/L_appName"
        app:layout_constraintTop_toBottomOf="@+id/L_appName" />

    <TextView
        android:id="@+id/L_appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="129dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="129dp"
        android:fontFamily="@font/sansita_black_italic"
        android:text="Way Ward"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logointerfaceicon" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:src="@mipmap/logointerfaceicon"
        app:layout_constraintEnd_toEndOf="@+id/L_appName"
        app:layout_constraintStart_toStartOf="@+id/L_appName"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>